@model FormInformation

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form method="post">
        <div class="form-group">
            <label for="exampleFirstName">Enter first name:</label>
            <input type="text" asp-for="FirstName" class="form-control" id="exampleFirstName" placeholder="First name">
        </div>
        <div class="form-group">
            <label for="exampleSurname">Enter last name:</label>
            <input type="text" asp-for="Surname" class="form-control" id="exampleSurname" placeholder="Last name">
        </div>
        <div class="form-group">
            <label for="exampleFileName">Enter file name:</label>
            <input type="text" asp-for="FileName" class="form-control" id="exampleFileName" placeholder="File name">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script type="text/javascript"src="~/js/user.js"></script>